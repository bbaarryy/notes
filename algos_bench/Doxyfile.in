
# Doxyfile configuration template for CMake

# --- Project Details ---
PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = @PROJECT_VERSION@
OUTPUT_DIRECTORY       = "docs/doxygen"
CREATE_SUBDIRS         = YES

# --- Input ---
INPUT                  = "@CMAKE_SOURCE_DIR@/src"
RECURSIVE              = YES
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES

# --- Output Generation ---
GENERATE_XML           = YES
GENERATE_HTML          = NO
GENERATE_LATEX         = NO
XML_OUTPUT             = "xml"
XML_PROGRAMLISTING     = YES

# --- Paths ---
STRIP_FROM_PATH        = "@CMAKE_SOURCE_DIR@"
